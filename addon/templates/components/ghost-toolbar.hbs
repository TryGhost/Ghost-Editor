{{#if isLink}}
    {{input keyDown=(action (perform linkKeyDown)) keyPress=(action (perform linkKeyPress)) autofocus=true placeholder="Enter a link"}}
{{else}}
<ul>
    {{#each toolbar as |tool|}}
        {{ghost-toolbar-button tool=tool editor=editor iconURL=iconURL assetPath=assetPath}}
    {{/each}}
</ul>
{{/if}}